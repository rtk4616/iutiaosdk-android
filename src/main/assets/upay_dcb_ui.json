{
    "window-no-title": true,
    "window-full-screen": true,
    "content-view": {
        "type": "relative-layout",
        "width": "fill",
        "height": "fill",
        "children": [
            {
                "type": "scroll-view",
                "id": "scroll",
                "width": "wrap",
                "height": "wrap",
                "background": "#ffffff",
                "align": "hcenter vcenter",
                "margin": "auto 20dp auto 20dp",
                "children": [
                    {
                        "type": "relative-layout",
                        "id": "container",
                        "width": "wrap",
                        "height": "wrap",
                        "background": "",
                        "align": "auto auto",
                        "margin": "auto auto auto auto",
                        "children": [
                            {
                                "type": "image",
                                "id": "background",
                                "width": "fill",
                                "height": "40dp",
                                "background": "upay_top_",
                                "align": "auto auto",
                                "margin": "auto auto auto auto",
                                "image-scaleType": "fit-xy"
                            },
                            {
                                "type": "button-multi-lan",
                                "id": "okButton",
                                "width": "fill",
                                "height": "wrap",
                                "align": "below layout_edit",
                                "margin": "10dp 25dp auto 25dp",
                                "text": "accept_and_buy",
                                "result-code": "ok",
                                "background": "upay_pay_ok",
                                "text-color": "#ffffff",
                                "text-size": "20px"
                            },
                            {
                                "type": "button",
                                "id": "cancelButton",
                                "width": "35dp",
                                "height": "25dp",
                                "align": "right auto",
                                "margin": "8dp 10dp auto auto",
                                "text": "",
                                "result-code": "canceled",
                                "background": "upay_backout",
                                "text-color": "",
                                "text-size": ""
                            },
                            {
                                "id": "label",
                                "type": "text-multi-lan",
                                "width": "fill",
                                "height": "wrap",
                                "align": "below background",
                                "margin": "auto auto auto auto",
                                "padding": "5dp auto 5dp 20dp",
                                "text": "pay_by_mobile",
                                "background": "upay_md_bg",
                                "text-color": "#089afc",
                                "text-size": "20px",
                                "visibility": "visible"
                            },
                            {
                                "id": "img2",
                                "type": "image",
                                "width": "fill",
                                "height": "80dp",
                                "align": "below label",
                                "margin": "5dp 25dp auto 25dp",
                                "background": "upay_top_bg_all",
                                "image-scaleType": "",
                                "image-src": "",
                                "visibility": "visible"
                            },
                            {
                                "id": "img1",
                                "type": "image",
                                "width": "25dp",
                                "height": "25dp",
                                "align": "below label",
                                "margin": "15dp auto auto 30dp",
                                "background": "",
                                "image-scaleType": "",
                                "image-src": "upay_amount",
                                "visibility": "visible"
                            },
                            {
                                "id": "label1",
                                "type": "text-multi-lan",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "right-of img1 below label",
                                "margin": "15dp auto auto 2dp",
                                "padding": "auto auto auto auto",
                                "text": "charge_amount",
                                "background": "",
                                "text-color": "#797979",
                                "text-size": "16px",
                                "visibility": "visible"
                            },
                            {
                                "id": "img3",
                                "type": "image",
                                "width": "25dp",
                                "height": "25dp",
                                "align": "below label1",
                                "margin": "15dp auto auto 30dp",
                                "background": "",
                                "image-scaleType": "",
                                "image-src": "upay_commodity",
                                "visibility": "visible"
                            },
                            {
                                "id": "label3",
                                "type": "text-multi-lan",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "right-of img3 below label1",
                                "margin": "17dp auto auto 2dp",
                                "padding": "auto auto auto auto",
                                "text": "product_name",
                                "background": "",
                                "text-color": "#797979",
                                "text-size": "16px",
                                "visibility": "visible"
                            },
                            {
                                "id": "label4",
                                "type": "text",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "right-of label3 below label1",
                                "margin": "17dp 25dp auto 2dp",
                                "padding": "auto auto auto auto",
                                "text": "$goods_name",
                                "background": "",
                                "text-color": "#797979",
                                "text-size": "16px",
                                "visibility": "visible",
                                "single-line": true
                            },
                            {
                                "id": "label2",
                                "type": "text",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "right-of label1 below label",
                                "margin": "15dp 25dp auto 2dp",
                                "padding": "auto auto auto auto",
                                "text": "$goods_price",
                                "background": "",
                                "text-color": "#f1b838",
                                "text-size": "16px",
                                "visibility": "visible",
                                "single-line": true,
                                "ellipsize": "marquee",
                                "marqueerepeatlimit": "-1",
                                "focusable": true,
                                "focusableintouchmode": true,
                                "scrollhorizontally": true
                            },
                            {
                                "id": "label9",
                                "type": "text",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "right-of label1 below label",
                                "margin": "15dp auto auto 2dp",
                                "padding": "auto auto auto auto",
                                "gravity": "end",
                                "background": "",
                                "text-color": "#f1b838",
                                "text-size": "16px",
                                "visibility": "visible"
                            },
                            {
                                "id": "label5",
                                "type": "text-multi-lan",
                                "width": "fill",
                                "height": "wrap",
                                "align": " below img3",
                                "margin": "9dp 20dp auto 20dp",
                                "padding": "3dp 3dp 3dp 5dp",
                                "text": "Please enter your phone number:",
                                "background": "",
                                "text-color": "#000000",
                                "text-size": "16px",
                                "visibility": "visible"
                            },
                            {
                                "type": "linear-layout",
                                "id": "layout_edit",
                                "width": "fill",
                                "height": "wrap",
                                "background": "",
                                "align": "below label5",
                                "margin": "5dp 25dp auto 25dp",
                                "padding": "auto auto auto auto",
                                "visibility": "visible",
                                "children": [
                                    {
                                        "id": "label7",
                                        "type": "text-multi-lan",
                                        "width": "wrap",
                                        "height": "29dp",
                                        "margin": "auto atuo auto atuo",
                                        "text": "+66",
                                        "background": "",
                                        "text-color": "#797979",
                                        "text-size": "16px",
                                        "visibility": "visible"
                                    },
                                    {
                                        "id": "msisdn",
                                        "type": "edit-text",
                                        "width": "fill",
                                        "height": "40dp",
                                        "weight": 1,
                                        "margin": "auto auto auto 5dp",
                                        "hint": "",
                                        "background": "upay_bottom_bg_all",
                                        "text-color": "#797979",
                                        "text-size": "15px",
                                        "singleline": "false",
                                        "selectallonfocus": "true"
                                    },
                                    {
                                        "id": "img_error",
                                        "type": "image",
                                        "width": "20dp",
                                        "height": "20dp",
                                        "margin": "auto auto auto 5dp",
                                        "background": "",
                                        "layout-gravity": "center",
                                        "image-src": "edit_error",
                                        "visibility": "gone"
                                    }
                                ]
                            },
                            {
                                "id": "img5",
                                "type": "image",
                                "width": "50dp",
                                "height": "30dp",
                                "align": "hcenter auto",
                                "margin": "5dp auto auto auto",
                                "background": "upay_logo",
                                "image-scaleType": "matrix",
                                "image-src": "",
                                "visibility": "visible"
                            },
                            {
                                "id": "img8",
                                "type": "image",
                                "width": "wrap",
                                "height": "wrap",
                                "align": "hcenter auto below okButton",
                                "padding": "10dp auto 10dp auto",
                                "background": "",
                                "image-scaleType": "",
                                "image-src": "upay_logo_bottom",
                                "visibility": "visible"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}