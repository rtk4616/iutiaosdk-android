<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4C4C4C" />
            <padding android:left="8dp" android:right="8dp" android:bottom="4dp" android:top="4dp" />
            <corners android:radius="2dp" />
            <stroke android:color="#B7B7B7" android:width="1dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#4C4C4C" />
            <padding android:left="8dp" android:right="8dp" android:bottom="4dp" android:top="4dp" />
            <corners android:radius="2dp" />
            <stroke android:color="#B7B7B7" android:width="1dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF" />
            <padding android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp" />
            <stroke android:color="#B7B7B7" android:width="1dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>